@model IEnumerable<WebApi.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}

<h2>Funcionários</h2>

<p>
    <a asp-action="CadastrarFuncionario" class="btn btn-sm btn-primary">Novo Funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tel)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "EditarFuncionario", new { CPF = item.CPF }, new { @class = "btn btn-sm btn-light" })
                        @*@Html.ActionLink("Detalhes", "DetalhesFuncionario", new { CPF = item.CPF }, new { @class = "btn btn-sm btn-light" })*@
                        @Html.ActionLink("Excluir", "DeletarFuncionario", new { CPF = item.CPF }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
